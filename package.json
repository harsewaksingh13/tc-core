  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "graphql": "^14.6.0",
    "apollo-boost": "^0.4.7",
    "apollo-link-ws": "^1.0.19",
    "@types/ws": "^7.2.4",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "files": [
    "lib/**/*"
